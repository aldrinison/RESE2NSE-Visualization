<!DOCTYPE html>
<html class="no-js" lang="en">
  <head>
	<% include ./partials/head %>
    <link rel="stylesheet" href="/stylesheets/jquery-ui.min.css" />
    <link rel="stylesheet" href="/stylesheets/graph.css" />
  </head>

  <body>
    <header>
		<% include ./partials/header %>
    </header> <!-- end header -->
	<% include ./partials/nav %>
		
    <div class="main">
      <div class="row">

        <div class="small-3 columns">
          <div class="nav-side">
            <div class="floor-links">
              <ul>
                <li><span class="nav-side-heading">EEE FLOOR PLAN</span><li>

                <% for (var i = 0; i < floorCount; i++) { %>
                  <% var floorNumber = i + 1 %>

                  <li><span class="floor-link" data-floor-number=<%= floorNumber %>>Floor <%= floorNumber %></span></li>
                <% } %>

              </ul>
            </div> <!-- end .floor-links -->
          </div> <!-- end .nav-side -->
        </div> <!-- end .columns -->

        <div class="small-9 columns">
          <div class="floor-group">

            <% for (var i = 0; i < floorCount; i++) { %>
              <% var floorID = "floor" + (i + 1) %>
              <% var floorNumber = i + 1 %>
              <% var imageID = "floor" + (i + 1) + "-img" %>
              <% var sliderID = "slider-range-" + (i + 1) %>

              <div class="floor" id="<%= floorID %>">
                <div class="floor-label">
                  <span>Floor <%= floorNumber %></span>
                  <button type="button" class="success button edit-btn" data-floor-number=<%= floorNumber %>>Edit Graph</button>
                </div> <!-- end .floor-label -->
                <div class="floor-graph">
                  <div class='graph-container'>
                    <img src='/images/floorplan7.jpg' class="floor-img" id="<%= imageID %>">
                  </div> <!-- end .graph-container -->

                  <div class="slider-container">
                    <div class="slider-label">
                      <span>Time: </span>
                      <span class="slider-time" id="slider-time-<%= (i + 1) %>"></span>
                    </div> <!-- end .slider-label -->
                    <div class="slider-range" id="<%= sliderID %>" data-floor-number=<%= floorNumber %>></div>
                  </div> <!-- end .slider-container -->
                </div> <!-- end .floor-graph -->
              </div> <!-- end .floor#floor_ -->

            <% } %>

          </div> <!-- end .floor-group -->
        </div> <!-- end .columns -->
      </div> <!-- end .row -->
    </div> <!-- end .main -->

  </body>

  <script></script>
  <script src="/javascripts/jquery-2.2.0.min.js"></script>
  <script src="/javascripts/jquery-ui.min.js"></script>
  <script src="/javascripts/foundation.min.js"></script>
  <script src="/javascripts/d3.v3.min.js"></script>
  <script src="/javascripts/jquery.qtip.min.js"></script>
  
  <script src="/javascripts/single-graph-drawer.js"></script>
  <script src="/javascripts/multi-graph-drawer.js"></script>
  <script src="/javascripts/floor.js"></script>
  <script src="/javascripts/event-handler.js"></script>
  <script src="/javascripts/graph-data-fetcher.js"></script>
  <script src="/javascripts/ui.js"></script>
  <script src="/javascripts/graph.js"></script>
</html>
